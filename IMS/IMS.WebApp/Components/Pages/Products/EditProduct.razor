@page "/editproduct/{invId:int}"
@rendermode InteractiveServer

@inject NavigationManager NavigationManager
@inject IEditProductUseCase EditProductUseCase
@inject IViewProductByIdUseCase ViewProductByIdUseCase

<h3>Edit Product</h3>
<br/>
@if (this.product is not null)
{
    <EditForm Model="product" OnValidSubmit="Update">
        <DataAnnotationsValidator></DataAnnotationsValidator>
        <ValidationSummary></ValidationSummary>

        <InputNumber @bind-Value="product.ProductId" hidden></InputNumber>

        <div class="form-group">
            <label for="name">Product Name</label>
            <InputText id="name"
                       @bind-Value="product.ProductName"
                       class="form-control">
            </InputText>
            <ValidationMessage For="() => product.ProductName"></ValidationMessage>
        </div>

        <div class="form-group">
            <label for="quantity">Quantity</label>
            <InputNumber id="quantity"
                         @bind-Value="product.Quantity"
                         class="form-control">
            </InputNumber>
            <ValidationMessage For="() => product.Quantity"></ValidationMessage>
        </div>

        <div class="form-group">
            <label for="price">Price</label>
            <InputNumber id="price"
                         @bind-Value="product.Price"
                         class="form-control">
            </InputNumber>
            <ValidationMessage For="() => product.Price"></ValidationMessage>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Update</button>
        &nbsp;
        <a href="/products" class="btn btn-primary">Cancel</a>
    </EditForm>
}

@code {

    [Parameter]
    public int InvId { get; set; }

    private Product? product { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (this.product is null)
        {
            var inv = await ViewProductByIdUseCase.ExecuteAsync(this.InvId);
            product = new Product
            {
                    ProductId = inv.ProductId,
                    ProductName = inv.ProductName,
                    Price = inv.Price,
                    Quantity = inv.Quantity
            };
        }
    }

    private async Task Update()
    {
        if (product is not null)
        {
            var inv = new Product
            {
                    ProductId = product.ProductId,
                    ProductName = product.ProductName,
                    Price = product.Price,
                    Quantity = product.Quantity
            };

            await EditProductUseCase.ExecuteAsync(inv);
            NavigationManager.NavigateTo("/products");
        }        
    }
}